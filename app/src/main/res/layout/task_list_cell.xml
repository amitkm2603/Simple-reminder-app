<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d7e8"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp" >

    <CheckBox
        android:id="@+id/task_list_cell_mark_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight=".05"
        android:gravity="center"
        android:layout_marginLeft="-8dp"
        android:buttonTint="#000"
        android:textColor="#000" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000" />
    <TextView
        android:id="@+id/task_list_cell_difficulty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="18dp"
        android:textColor="#000" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000" />
    <TextView
        android:id="@+id/task_list_cell_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="18dp"
        android:textColor="#000" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000" />

    <TextView
        android:id="@+id/task_list_cell_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="18dp"
        android:drawableTop="@android:drawable/ic_menu_edit"
        android:textColor="#000" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000" />
    <TextView
        android:id="@+id/task_list_cell_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="18dp"
        android:layout_marginRight="-8dp"
        android:drawableTop="@android:drawable/ic_menu_delete"
        android:textColor="#000" />



</LinearLayout>